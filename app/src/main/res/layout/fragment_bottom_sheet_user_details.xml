<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rounded_corner"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="20dp"
    android:orientation="vertical"
    android:backgroundTint="#FFFFFF"
    tools:context=".fragments.BottomSheetUserDetailsFragment">

<com.google.android.material.imageview.ShapeableImageView
    android:layout_width="180dp"
    android:layout_height="180dp"
    android:src="@drawable/ic_blank_picture"
    android:id="@+id/iv_detailsProfile"
    android:scaleType="centerCrop"
    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Large"/>

<LinearLayout
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:padding="04dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name: "
            android:gravity="end"
            android:textColor="@color/black"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/dm_serif_display"
            android:textStyle="bold"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name: "
            android:textColor="@color/black"
            android:fontFamily="@font/dm_serif_display"
            android:id="@+id/tv_detailsName"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:padding="04dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name: "
            android:gravity="end"
            android:textColor="@color/black"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/dm_serif_display"
            android:textStyle="bold"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name: "
            android:textColor="@color/black"
            android:fontFamily="@font/dm_serif_display"
            android:id="@+id/tv_detailsUsername"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_acceptRequest"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:backgroundTint="#0AA00F"
            android:layout_margin="4dp"
            android:background="@drawable/ripple_effect"
            android:text="Accept Request"
            android:textColor="@color/white"
            android:textSize="11dp" />

<!--        <androidx.appcompat.widget.AppCompatButton-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Accept Request"-->
<!--            android:id="@+id/bt_acceptRequest"-->
<!--            android:layout_margin="04dp"-->
<!--            android:layout_weight="1"-->
<!--            android:clickable="true"-->
<!--            android:background="#4CAF50"-->
<!--            android:focusable="true" />-->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_declineRequest"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:backgroundTint="#FF0000"
            android:layout_margin="4dp"
            android:background="@drawable/ripple_effect"
            android:text="Decline Request"
            android:textColor="@color/white"
            android:textSize="11dp" />

<!--        <ImageView-->
<!--            android:layout_margin="04dp"-->
<!--            android:layout_width="36dp"-->
<!--            android:layout_height="36dp"-->
<!--            android:src="@drawable/ic_cross"-->
<!--            android:id="@+id/bt_declineRequest"-->
<!--            android:layout_weight="1"-->
<!--            app:tint="#FF0000" />-->

    </LinearLayout>

</LinearLayout>


</LinearLayout>